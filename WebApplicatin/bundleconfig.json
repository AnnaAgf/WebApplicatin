[
  {
    // из набора входных файлов формируется исходящий файл
    "outputFileName": "wwwroot/css/site.min.css",
    "inputFiles": [
      "wwwroot/css/prettyPhoto.css",
      "wwwroot/css/price-range.css",
      "wwwroot/css/animate.css",
      "wwwroot/css/main.css",  // ломал билд проекта (недопустимые символы)	
      "wwwroot/css/responsive.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/js/price-range.js",
      "wwwroot/js/jquery.prettyPhoto.js",
      "wwwroot/js/main.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": true
  }
]