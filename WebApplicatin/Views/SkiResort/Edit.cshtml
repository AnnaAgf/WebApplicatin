@model SkiResortView
@{
    ViewData["Title"] = "Редактирование";
}
<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label">Страна</label>
                <input asp-for="Country" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label">Высота</label>
                <input asp-for="Height" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PathLenght" class="control-label">Протяженность трасс</label>
                <input asp-for="PathLenght" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>



